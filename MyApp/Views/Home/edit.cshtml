@using MyApp.Data;
@model MyApp.Data.Client;
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>

    <div>
        <a href="@Url.Action("index", "home")" class="btn btn-warning">Return to form</a>
    </div>


    <!-- input for insert data into database -->

    <section class="container">

        <h1 class="text-secondary">Fill this form</h1>

        <form id="consultationForm" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" name="Name" value="@Model.Name" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" value="@Model.Email"  class="form-control">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Age</label>
                    <input type="number" name="@Model.Age" class="form-control" value="Age">
                </div>

                <div class="col-md-12 mb-3">
                    <input type="submit" value="Update" class="form-control bg-primary" required>
                </div>

                <div class="col-md-12 mb-3">
                    <a href="@Url.Action("client", "home")" class="btn btn-primary">show details</a>
                </div>

            </div>
        </form>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>