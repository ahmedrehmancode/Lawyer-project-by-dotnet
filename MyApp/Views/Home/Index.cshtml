<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home Page</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>
<body>

    <section class="bg-primary text-white text-center py-5">
        <div class="container py-5">
            <h1 class="display-3 fw-bold mb-3">Expert Legal Services</h1>
            <p class="lead mb-4">Professional attorneys ready to help you</p>
        </div>
    </section>

    <!-- Category Filter -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <h5 class="mb-0">Filter by Category:</h5>
                </div>
                <div class="col-md-9">
                    <select class="form-select" id="categoryFilter" onchange="filterLawyers()">
                        <option value="all">All Practice Areas</option>
                        <option value="criminal">Criminal Law</option>
                        <option value="family">Family Law</option>
                        <option value="corporate">Corporate Law</option>
                    </select>
                </div>
            </div>
        </div>
    </section>

    <!-- Lawyers Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Our Attorneys</h2>
            <div class="row" id="lawyersContainer">
                <!-- Lawyer Card 1 -->
                <div class="col-lg-4 col-md-6 mb-4 lawyer-card" data-category="criminal">
                    <div class="card h-100 shadow">
                        <img src="https://via.placeholder.com/400x300/0d6efd/ffffff?text=John+Smith" class="card-img-top" alt="John Smith">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">John Smith</h5>
                            <p class="text-primary fw-semibold mb-2">Criminal Law</p>
                            <p class="card-text"><i class="bi bi-trophy text-warning me-2"></i>15 Years Experience</p>
                            <p class="card-text small text-muted">Specialized in criminal defense and white-collar crimes.</p>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <button class="btn btn-primary w-100" onclick="selectLawyer('John Smith', 'Criminal Law')">
                                Select Attorney
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Lawyer Card 2 -->
                <div class="col-lg-4 col-md-6 mb-4 lawyer-card" data-category="family">
                    <div class="card h-100 shadow">
                        <img src="https://via.placeholder.com/400x300/198754/ffffff?text=Sarah+Johnson" class="card-img-top" alt="Sarah Johnson">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Sarah Johnson</h5>
                            <p class="text-success fw-semibold mb-2">Family Law</p>
                            <p class="card-text"><i class="bi bi-trophy text-warning me-2"></i>12 Years Experience</p>
                            <p class="card-text small text-muted">Expert in divorce and custody battles.</p>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <button class="btn btn-success w-100" onclick="selectLawyer('Sarah Johnson', 'Family Law')">
                                Select Attorney
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Lawyer Card 3 -->
                <div class="col-lg-4 col-md-6 mb-4 lawyer-card" data-category="corporate">
                    <div class="card h-100 shadow">
                        <img src="https://via.placeholder.com/400x300/6c757d/ffffff?text=Michael+Chen" class="card-img-top" alt="Michael Chen">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Michael Chen</h5>
                            <p class="text-secondary fw-semibold mb-2">Corporate Law</p>
                            <p class="card-text"><i class="bi bi-trophy text-warning me-2"></i>18 Years Experience</p>
                            <p class="card-text small text-muted">Specializing in business formation and mergers.</p>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3">
                            <button class="btn btn-secondary w-100" onclick="selectLawyer('Michael Chen', 'Corporate Law')">
                                Select Attorney
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <!-- input for insert data into database -->

    <section class="container">

        <h1 class="text-secondary">Fill this form</h1>

        <form id="consultationForm" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" name="Name" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Age</label>
                    <input type="number" name="Age" class="form-control" required>
                </div>
                
                <div class="col-md-12 mb-3">
                    <input type="submit" class="form-control bg-primary" required>
                </div>

                <div class="col-md-12 mb-3">
                    <a href="@Url.Action("client", "home")" class="btn btn-primary">show details</a>
                </div>

            </div>
            </form>
    </section>

    <!-- Consultation Form -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white text-center py-4">
                            <h3 class="mb-0 fw-bold">Book Consultation</h3>
                        </div>
                        <div class="card-body p-4">
                            <div class="alert alert-info d-none" id="selectedLawyerAlert">
                                <strong>Selected:</strong> <span id="selectedLawyerName"></span> - <span id="selectedLawyerCategory"></span>
                            </div>





                                <form id="consultationForm">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">First Name</label>
                                        <input type="text" class="form-control" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" class="form-control" required>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="tel" class="form-control" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Select Attorney</label>
                                    <select class="form-select" id="lawyerSelect" required>
                                        <option value="">Choose an attorney...</option>
                                        <option value="John Smith - Criminal Law">John Smith - Criminal Law</option>
                                        <option value="Sarah Johnson - Family Law">Sarah Johnson - Family Law</option>
                                        <option value="Michael Chen - Corporate Law">Michael Chen - Corporate Law</option>
                                    </select>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Preferred Date</label>
                                        <input type="date" class="form-control" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Preferred Time</label>
                                        <select class="form-select" required>
                                            <option value="">Select time...</option>
                                            <option value="09:00">09:00 AM</option>
                                            <option value="10:00">10:00 AM</option>
                                            <option value="11:00">11:00 AM</option>
                                            <option value="14:00">02:00 PM</option>
                                            <option value="15:00">03:00 PM</option>
                                            <option value="16:00">04:00 PM</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Case Description</label>
                                    <textarea class="form-control" rows="4" required></textarea>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">Book Consultation</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterLawyers() {
            const category = document.getElementById('categoryFilter').value;
            const cards = document.querySelectorAll('.lawyer-card');
            cards.forEach(card => {
                if (category === 'all' || card.dataset.category === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function selectLawyer(name, category) {
            document.getElementById('selectedLawyerName').textContent = name;
            document.getElementById('selectedLawyerCategory').textContent = category;
            document.getElementById('selectedLawyerAlert').classList.remove('d-none');
            document.getElementById('lawyerSelect').value = name + ' - ' + category;
            document.querySelector('#consultationForm').scrollIntoView({ behavior: 'smooth' });
        }

        // document.getElementById('consultationForm').addEventListener('submit', function(e) {
        //     e.preventDefault();
        //     alert('Consultation request submitted successfully!');
        //     this.reset();
        //     document.getElementById('selectedLawyerAlert').classList.add('d-none');
        // });
    </script>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>